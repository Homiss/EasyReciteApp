<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adm.dictionary.dictionary">


    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name="com.adm.dictionary.app.MyApp"
        android:allowBackup="true"
        android:icon="@drawable/easy_recite"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PlanPracticeActivity" />
        <activity android:name=".LoginAndRegistActivity"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustResize" />
        <activity android:name=".QuestionActivity"/>
        <activity android:name=".Html5Activity"
            />
    </application>

</manifest>